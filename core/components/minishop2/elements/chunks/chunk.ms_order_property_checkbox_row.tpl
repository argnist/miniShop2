<div class="form-group input-parent [[+is_hidden:is=`1`:then=`hidden`]]">
    <label class="col-sm-4 control-label">
        [[+title]]
    </label>
    <div class="col-sm-6">
        <div class="checkbox">
            <input type="checkbox" [[+is_hidden:is=`1`:then=`disabled="disabled"`]] value="[[+default_value:default=`1`]]" name="[[+name]]" />
        </div>
    </div>
</div>
